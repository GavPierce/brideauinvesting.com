<script>
	import { validateSession, getAccount, logout, isLoggedIn } from '../modules/auth.client.js';

	const isAuthPage = window.location.pathname.startsWith('/authentication/') || window.location.pathname.startsWith('/admin');

	if (!isAuthPage) {
		// Gate: redirect to sign-in if not logged in
		if (!isLoggedIn()) {
			window.location.href = '/authentication/sign-in';
		} else {
			// Validate session in background
			validateSession().then((account) => {
				if (!account) {
					window.location.href = '/authentication/sign-in';
				}
			});
		}

		// Populate user name + show admin link if admin
		const account = getAccount();
		const nameEl = document.getElementById('nav-user-name');
		if (nameEl && account) {
			nameEl.textContent = account.display_name || account.email;
		}
		const adminLink = document.getElementById('nav-admin-link');
		if (adminLink && account && account.role === 'admin') {
			adminLink.classList.remove('hidden');
		}

		// Logout handler
		const logoutBtn = document.getElementById('logout-btn');
		logoutBtn?.addEventListener('click', async () => {
			await logout();
			window.location.href = '/authentication/sign-in';
		});
	} else {
		// Hide user menu on auth pages
		const userMenu = document.getElementById('user-menu-area');
		if (userMenu) userMenu.style.display = 'none';
	}
</script>

