---
/* eslint max-lines: 'off' */
---

<div class="px-4 pt-4 pb-8 space-y-6">

	<!-- Row 1: Stats Overview Cards -->
	<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
		<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-4 shadow-sm">
			<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Visits This Week</p>
			<p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white" id="stat-visits-week">—</p>
		</div>
		<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-4 shadow-sm">
			<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Visits Today</p>
			<p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white" id="stat-visits-today">—</p>
		</div>
		<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-4 shadow-sm">
			<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Users Online</p>
			<p class="mt-1 text-2xl font-bold text-emerald-600 dark:text-emerald-400" id="stat-online">—</p>
		</div>
		<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-4 shadow-sm">
			<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Total Users</p>
			<p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white" id="stat-total-users">—</p>
		</div>
		<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-4 shadow-sm">
			<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Channels</p>
			<p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white" id="stat-channels">—</p>
		</div>
		<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-4 shadow-sm">
			<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Trending</p>
			<p class="mt-1 text-lg font-bold text-blue-600 dark:text-blue-400 truncate" id="stat-trending">—</p>
			<p class="text-xs text-gray-500 dark:text-gray-400" id="stat-trending-pct"></p>
		</div>
	</div>

	<!-- Row 2: Top Channels Chart + Scraping Status -->
	<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
		<!-- Top Channels Chart -->
		<div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-5 shadow-sm">
			<div class="flex items-center justify-between mb-4">
				<h3 class="text-base font-semibold text-gray-900 dark:text-white">Top Channels (7 days)</h3>
				<select id="top-channels-days" class="text-xs bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg px-2 py-1 text-gray-700 dark:text-gray-300 focus:ring-blue-500 focus:border-blue-500">
					<option value="7" selected>Last 7 days</option>
					<option value="14">Last 14 days</option>
					<option value="30">Last 30 days</option>
				</select>
			</div>
			<div id="top-channels-chart" class="min-h-[280px]"></div>
		</div>

		<!-- Scraping Status Panel -->
		<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-5 shadow-sm">
			<div class="flex items-center justify-between mb-4">
				<h3 class="text-base font-semibold text-gray-900 dark:text-white">Scraper Status</h3>
				<span class="inline-flex items-center gap-1.5 text-xs font-medium px-2.5 py-0.5 rounded-full" id="scrape-status-badge">
					<span class="w-2 h-2 rounded-full" id="scrape-status-dot"></span>
					<span id="scrape-status-text">Loading...</span>
				</span>
			</div>
			<dl class="space-y-3 text-sm">
				<div class="flex justify-between">
					<dt class="text-gray-500 dark:text-gray-400">Last completed</dt>
					<dd class="font-medium text-gray-900 dark:text-white" id="scrape-last-completed">—</dd>
				</div>
				<div class="flex justify-between">
					<dt class="text-gray-500 dark:text-gray-400">Duration</dt>
					<dd class="font-medium text-gray-900 dark:text-white" id="scrape-duration">—</dd>
				</div>
				<div class="flex justify-between">
					<dt class="text-gray-500 dark:text-gray-400">Channels scraped</dt>
					<dd class="font-medium text-gray-900 dark:text-white" id="scrape-channels">—</dd>
				</div>
				<div class="flex justify-between">
					<dt class="text-gray-500 dark:text-gray-400">Cycle count</dt>
					<dd class="font-medium text-gray-900 dark:text-white" id="scrape-cycles">—</dd>
				</div>
				<div class="flex justify-between">
					<dt class="text-gray-500 dark:text-gray-400">Rate limits (last cycle)</dt>
					<dd class="font-medium text-gray-900 dark:text-white" id="scrape-rate-limits">—</dd>
				</div>
				<div class="flex justify-between">
					<dt class="text-gray-500 dark:text-gray-400">Interval</dt>
					<dd class="font-medium text-gray-900 dark:text-white" id="scrape-interval">—</dd>
				</div>
			</dl>
			<!-- Progress bar for active scrape -->
			<div class="mt-4 hidden" id="scrape-progress-wrap">
				<div class="flex items-center justify-between text-xs text-gray-500 dark:text-gray-400 mb-1">
					<span>Scraping in progress...</span>
					<span id="scrape-progress-text"></span>
				</div>
				<div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-1.5">
					<div class="bg-blue-600 h-1.5 rounded-full transition-all duration-500" id="scrape-progress-bar" style="width: 0%"></div>
				</div>
			</div>
		</div>
	</div>

	<!-- Row 3: Data Panels -->
	<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm overflow-hidden">
		<!-- Tab Navigation -->
		<div class="border-b border-gray-200 dark:border-gray-700">
			<ul class="flex text-sm font-medium text-center text-gray-600 dark:text-gray-400" id="fullWidthTab" data-tabs-toggle="#fullWidthTabContent" role="tablist">
				<li class="flex-1">
					<button id="visits-tab" role="tab" class="inline-flex items-center justify-center gap-2 w-full px-4 py-3.5 border-b-2 border-transparent hover:text-blue-600 hover:border-blue-300 dark:hover:text-blue-400 transition-colors">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/></svg>
						Channel Visits
					</button>
				</li>
				<li class="flex-1">
					<button id="faq-tab" type="button" role="tab" class="inline-flex items-center justify-center gap-2 w-full px-4 py-3.5 border-b-2 border-transparent hover:text-blue-600 hover:border-blue-300 dark:hover:text-blue-400 transition-colors">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
						Channel Users
					</button>
				</li>
				<li class="flex-1">
					<button id="about-tab" role="tab" class="inline-flex items-center justify-center gap-2 w-full px-4 py-3.5 border-b-2 border-transparent hover:text-blue-600 hover:border-blue-300 dark:hover:text-blue-400 transition-colors">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
						User Search
					</button>
				</li>
			</ul>
		</div>

		<div class="flex flex-wrap">
			<!-- Column: Channel Visits -->
			<div class="p-4 overflow-y-auto h-[32em] w-full lg:w-1/3 border-r border-gray-100 dark:border-gray-700" id="visits" role="tabpanel" aria-labelledby="visits-tab">
				<label for="channel-tabs1" class="sr-only">Select channel</label>
				<select id="channel-tabs1" class="mb-3 bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"></select>
				<ul role="list" id="visits-list" class="divide-y divide-gray-100 dark:divide-gray-700"></ul>
			</div>

			<!-- Column: Channel Users -->
			<div class="p-4 overflow-y-auto h-[32em] w-full lg:w-1/3 border-r border-gray-100 dark:border-gray-700" id="faq" role="tabpanel" aria-labelledby="faq-tab">
				<label for="channel-tabs2" class="sr-only">Select channel</label>
				<select id="channel-tabs2" class="mb-3 bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"></select>
				<ul role="list" id="channel-list" class="divide-y divide-gray-100 dark:divide-gray-700"></ul>
			</div>

			<!-- Column: User Visits Search -->
			<div class="p-4 overflow-y-auto max-h-[32em] w-full lg:w-1/3" id="about" role="tabpanel" aria-labelledby="about-tab">
				<div class="relative mb-4">
					<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
						<span class="text-gray-400 dark:text-gray-500 text-sm font-medium">@</span>
					</div>
					<input id="user-input" placeholder="Search by handle — press Enter" class="pl-8 bg-gray-50 border border-gray-200 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
				</div>
				<div class="text-sm font-medium text-center mb-2" id="user-info"></div>
				<ul role="list" id="user-list" class="divide-y divide-gray-100 dark:divide-gray-700"></ul>
			</div>
		</div>
	</div>
</div>

<script>
	import './DashBoard.client.js';
</script>

<style is:global>
	.apexcharts-tooltip {
		@apply bg-white dark:bg-gray-700 text-gray-500 dark:text-gray-400 border-0 rounded-lg shadow-lg !important;
	}
	.apexcharts-tooltip .apexcharts-tooltip-title {
		@apply py-2 px-4 bg-gray-100 dark:bg-gray-600 border-b border-gray-200 dark:border-gray-500 !important;
	}
	.apexcharts-xaxistooltip {
		@apply text-gray-500 border-0 bg-white dark:bg-gray-700 dark:text-gray-300 rounded-lg shadow-lg !important;
	}
	.apexcharts-tooltip .apexcharts-tooltip-text-y-value {
		@apply dark:text-white;
	}
	.apexcharts-xaxistooltip-text {
		@apply font-medium text-sm !important;
	}
	.apexcharts-xaxistooltip:before,
	.apexcharts-xaxistooltip:after {
		@apply border-0 !important;
	}
</style>
