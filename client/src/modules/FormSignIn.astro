---
import { SITE_TITLE } from '../app/constants';
---

<style>
	@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');
	.font-brand {
		font-family: 'Plus Jakarta Sans', ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
	}
</style>

<div class="flex min-h-screen">
	<!-- Left: Gradient Hero -->
	<div class="hidden lg:flex lg:w-1/2 relative overflow-hidden bg-gradient-to-br from-blue-600 via-indigo-600 to-purple-700">
		<!-- Decorative shapes -->
		<div class="absolute inset-0">
			<div class="absolute top-[-10%] right-[-15%] w-[500px] h-[500px] rounded-full bg-white/5"></div>
			<div class="absolute bottom-[-20%] left-[-10%] w-[600px] h-[600px] rounded-full bg-white/5"></div>
			<div class="absolute top-[40%] left-[20%] w-[200px] h-[200px] rounded-full bg-white/5"></div>
		</div>
		<!-- Content -->
		<div class="relative z-10 flex flex-col justify-center px-12 xl:px-20 text-white">
			<div class="mb-10">
				<span class="font-brand text-3xl xl:text-4xl font-extrabold tracking-tight">{SITE_TITLE}</span>
			</div>
			<h1 class="font-brand text-4xl xl:text-5xl font-extrabold leading-tight mb-6">
				Real-time channel<br/>intelligence at your<br/>fingertips.
			</h1>
			<p class="text-lg xl:text-xl text-blue-100/90 max-w-md leading-relaxed mb-10">
				Track user activity, monitor channel visits, and discover trending stocks — all in one powerful dashboard.
			</p>
			<!-- Feature pills -->
			<div class="flex flex-wrap gap-3">
				<span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm text-sm font-medium">
					<svg class="w-4 h-4 text-emerald-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
					Live tracking
				</span>
				<span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm text-sm font-medium">
					<svg class="w-4 h-4 text-emerald-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
					Channel analytics
				</span>
				<span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm text-sm font-medium">
					<svg class="w-4 h-4 text-emerald-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
					Trend detection
				</span>
				<span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm text-sm font-medium">
					<svg class="w-4 h-4 text-emerald-300" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
					User search
				</span>
			</div>
		</div>
	</div>

	<!-- Right: Login Form -->
	<div class="w-full lg:w-1/2 flex items-center justify-center px-6 py-12 bg-white dark:bg-gray-900">
		<div class="w-full max-w-md">
			<!-- Mobile brand (only shown on small screens) -->
			<div class="lg:hidden mb-8 text-center">
				<span class="font-brand text-2xl font-extrabold tracking-tight bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">{SITE_TITLE}</span>
			</div>

			<div class="mb-8">
				<h2 class="text-3xl font-extrabold text-gray-900 dark:text-white font-brand">Welcome back</h2>
				<p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Sign in to access your dashboard</p>
			</div>

			<div id="login-error" class="hidden mb-4 p-3.5 text-sm text-red-700 bg-red-50 rounded-xl border border-red-200 dark:bg-red-900/20 dark:border-red-800/30 dark:text-red-400"></div>

			<form id="login-form" class="space-y-5">
				<div>
					<label for="email" class="block mb-2 text-sm font-semibold text-gray-700 dark:text-gray-300">Email address</label>
					<input
						type="email"
						name="email"
						id="email"
						class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-900 dark:text-white rounded-xl text-sm focus:ring-2 focus:ring-blue-500/40 focus:border-blue-500 transition-shadow placeholder-gray-400 dark:placeholder-gray-500"
						placeholder="you@company.com"
						required
					/>
				</div>
				<div>
					<label for="password" class="block mb-2 text-sm font-semibold text-gray-700 dark:text-gray-300">Password</label>
					<input
						type="password"
						name="password"
						id="password"
						placeholder="••••••••"
						class="w-full px-4 py-3 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-900 dark:text-white rounded-xl text-sm focus:ring-2 focus:ring-blue-500/40 focus:border-blue-500 transition-shadow placeholder-gray-400 dark:placeholder-gray-500"
						required
					/>
				</div>
				<button
					type="submit"
					id="login-btn"
					class="w-full px-5 py-3.5 text-sm font-bold text-white bg-gradient-to-r from-blue-600 to-indigo-600 rounded-xl hover:from-blue-500 hover:to-indigo-500 focus:ring-4 focus:ring-blue-300/50 transition-all shadow-lg shadow-blue-500/25"
				>
					Sign in
				</button>
			</form>

			<p class="mt-8 text-center text-xs text-gray-400 dark:text-gray-500">
				Invite-only access. Contact your administrator for an account.
			</p>
		</div>
	</div>
</div>

<script>
	import { login, isLoggedIn } from './auth.client.js';

	if (isLoggedIn()) {
		window.location.href = '/';
	}

	const form = document.getElementById('login-form') as HTMLFormElement;
	const errorEl = document.getElementById('login-error') as HTMLElement;
	const btn = document.getElementById('login-btn') as HTMLButtonElement;

	form?.addEventListener('submit', async (e) => {
		e.preventDefault();
		errorEl.classList.add('hidden');
		btn.disabled = true;
		btn.textContent = 'Signing in...';

		const email = (document.getElementById('email') as HTMLInputElement).value;
		const password = (document.getElementById('password') as HTMLInputElement).value;

		try {
			await login(email, password);
			window.location.href = '/';
		} catch (err: any) {
			errorEl.textContent = err.message || 'Login failed';
			errorEl.classList.remove('hidden');
			btn.disabled = false;
			btn.textContent = 'Sign in';
		}
	});
</script>
